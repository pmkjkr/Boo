<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="40dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp">

            <Spinner
                android:id="@+id/achiev_all"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:entries="@array/achiev_select" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/all_ok_card"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            card_view:cardBackgroundColor="#2d3e50"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp">

            <Button
                android:id="@+id/all_ok"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="#000000FF"
                android:text="확인"
                android:textColor="#fff"
                android:textSize="18dp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/part_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/year"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:gravity="right"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp">

            <Spinner
                android:id="@+id/achiev_year"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/part_ok_card"
            android:layout_toRightOf="@+id/year"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp">

            <Spinner
                android:id="@+id/achiev_side"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/part_ok_card"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="#2d3e50"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp">

            <Button
                android:id="@+id/part_ok"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="#000000FF"
                android:text="확인"
                android:textColor="#fff"
                android:textSize="18dp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/part_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/frag_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/achiev_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E0ECF8"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이수구분 : " />

        <TextView
            android:id="@+id/distin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공필수" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="," />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학점 : " />

        <TextView
            android:id="@+id/grade_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="3" />

        <android.support.v7.widget.CardView
            android:id="@+id/below"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            card_view:cardBackgroundColor="#2d3e50"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp">

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="#000000FF"
                android:src="@drawable/below"
                android:textColor="#fff"
                android:textSize="18dp"
                android:id="@+id/below2" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>