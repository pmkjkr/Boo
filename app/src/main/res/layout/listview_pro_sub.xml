<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/pro_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="이름"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/pro_sub_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pro_sub_name"
        android:text="학과"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/pro_sub_mail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#41936d"
        android:padding="5dp"
        android:src="@drawable/tomail" />

    <ImageButton
        android:id="@+id/pro_sub_call"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/pro_sub_mail"
        android:background="#3374b0"
        android:padding="5dp"
        android:src="@drawable/call" />
</RelativeLayout>